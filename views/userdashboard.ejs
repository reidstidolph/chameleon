<tabset>
    <tab class="tab">
        <tab-heading><span class="fa fa-flag"></span> Demos</tab-heading>
        <div class="row">
            <div class="col-lg-12">
                <div class="well">
                    <h3>My Demos</h3>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Demo Name</th>
                                <th>Description</th>
                                <th>Launch Pad</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="demo in myUser.globalDemos">
                                <td>{{demo.name}}</td>
                                <td>{{demo.description}}</td>
                                <td><span ng-repeat="ux in demo.ux"><button type="button" class="btn btn-default-oracle" ng-click="launchDemo(ux.url)"><span class="fa fa-rocket"></span> {{ux.description}}</button></span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </tab>
    <tab class="tab">
        <tab-heading><span class="fa fa-cogs"></span> Demo Builder</tab-heading>
    </tab>
    <tab class="tab" >
        <tab-heading><span class="fa fa-user"></span> User</tab-heading>
        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <h3><span class="fa fa-user"></span> User Info  <button type="button" class="btn btn-default-oracle pull-right"><span class="fa fa-wrench"></span> Edit</button></h3>
                    <p>
                        <strong>first name</strong>: <%= user.fname %><br>
                        <strong>last name</strong>: <%= user.lname %><br>
                        <strong>email</strong>: <%= user.email %><br>
                        <strong>password</strong>: ********
                    </p>
                </div>
            </div>
        </div>
    </tab>
    <tab class="tab">
        <tab-heading>
            <span class="fa fa-bomb"></span>
            Logout
        </tab-heading>
        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <p><br><a href="/logout" class="btn btn-danger btn-lg">Logout</a></p>
                </div>
            </div>
        </div>
    </tab>
</tabset>